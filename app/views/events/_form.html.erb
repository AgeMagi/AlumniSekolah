<%= form_with(model: event, local: true, multipart: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :event_title %>
  </div>

  <div class="field">
    <%= form.label :narasi %>
    <%= form.text_area :narasi, id: :event_narasi %>
  </div>

  <div class="field">
    <%= form.label(:dilaksanakan, "Tanggal dilaksanakan : ") %>
    <%= form.date_field :dilaksanakan %>
  </div>

  <%= form.fields_for :photos do |p| %>
    <div class="field">
      <%= p.label :foto %> <br>
      <%= p.file_field :foto, :multiple => true, name: "photos[foto][]" %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
